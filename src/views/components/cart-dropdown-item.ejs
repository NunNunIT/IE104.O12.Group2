<div class="cart-dropdown__block">
	<a href="http://127.0.0.1:3000/search/<%= cart.product_variant_id %>?product_name=<%= cart.product_name %>&category_id=<%= cart.category_id %>&category_name=<%= cart.category_name %>" class="cart-dropdown__main">
		<img class="cart-dropdown__img" src="/imgs/product_image/P<%= cart.product_id %>/<%= cart.product_avt_img %>" alt="<%= cart.product_name ?? 'NaN' %>">
		<div class="cart-dropdown__content">
			<span><%= cart.product_name ?? 'NaN' %></span>
			<div class="cart-dropdown__price"><%= cart.product_variant_price_after_discount ?? 'NaN'%>đ<small><%= cart.product_variant_price_currency ?? 'NaN' %>đ</small></div>
		</div>
	</a>
</div>