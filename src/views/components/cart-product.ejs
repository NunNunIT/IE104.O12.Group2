<div class="cart-item mobile-hidden">
	<input type="hidden" name="product_variant_id" value="<%= cart.product_variant_id %>" placeholder="">
	<input onclick="checkOne(event); calcTotalPrice(event)" type="checkbox" class="checkbox mobile-hidden" placeholder="">
	<div class="cart-item__product lg-col">
		<img src="/imgs/product_image/P<%= cart.product_id %>/<%= cart.product_avt_img %>" alt="<%= cart.product_name %>">
		<p><%= cart.product_name ?? 'null' %></p>
	</div>

	<div class="sm-col">
		<select name="variant" class="cart-item__variants">
			<% if (cart.cart_product_variant) { %>
			<% cart.cart_product_variant.forEach(variant => { %>
			<option value="<%= variant.product_variant_name ?? 'null' %>"><%= variant.product_variant_name ?? 'null' %></option>
			<% }) %>
			<% } %>
		</select>
	</div>

	<div class="sm-col cart-item__unit-price">
		<% if (cart.discount_amount) { %>
		<input type="hidden" name="product_variant_price_before" value="<%= cart.product_variant_price %>" placeholder="">
		<del><%= toCurrency(cart.product_variant_price) ?? 'null' %>đ</del>
		<input type="hidden" name="product_variant_price_after" value="<%= parseInt(cart.product_variant_price - cart.product_variant_price * cart.discount_amount / 100) %>" placeholder="">
		<p class="cart-item__unit-price-number"><%= toCurrency(parseInt(cart.product_variant_price - cart.product_variant_price * cart.discount_amount / 100)) ?? 'null' %>đ</p>
		<% } else { %>
		<input type="hidden" name="product_variant_price_before" value="" placeholder="">
		<input type="hidden" name="product_variant_price_after" value="<%= cart.product_variant_price %>" placeholder="">
		<p class="cart-item__unit-price-number"><%= toCurrency(cart.product_variant_price) ?? 'null' %>đ</p>
		<% } %>
	</div>

	<div class="cart-item__quantity sm-col">
		<button onclick="minus(event)" type="button"><span class="material-symbols-outlined">remove</span></button>
		<input onchange="calcPrice(event); calcTotalPrice(event)" name="product_quantity" type="number" value="<%= cart.cart_quantity %>" min="1" max="100" placeholder="">
		<button onclick="add(event)" type="button"><span class="material-symbols-outlined">add</span></button>
	</div>

	<div class="sm-col">
		<% if (cart.discount_amount) { %>
		<input type="hidden" name="product_price" value="<%= cart.cart_quantity * parseInt(cart.product_variant_price - cart.product_variant_price * cart.discount_amount / 100) %>" placeholder="">
		<p class="cart-item__price"><%= toCurrency(cart.cart_quantity * parseInt(cart.product_variant_price - cart.product_variant_price * cart.discount_amount / 100)) ?? 'null' %>đ</p>
		<% } else { %>
		<input type="hidden" name="product_price" value="<%= cart.cart_quantity * cart.product_variant_price %>" placeholder="">
		<p class="cart-item__price"><%= toCurrency(cart.cart_quantity * cart.product_variant_price) ?? 'null' %>đ</p>
		<% } %>
	</div>

	<div class="sm-col">
		<button onclick="removeItem(event)" class="cart-item__del-btn" type="button">Xóa</button>
	</div>
</div>

