<!DOCTYPE html>
<html lang="vi-VN">

<head>
	

	<link rel="shortcut icon" type="ico" href="/imgs/ico-logo-blue.png" />


	<link rel="stylesheet" href="/styles/pages/account/edit-information.css">

	<title>TECHTWO.</title>
</head>

<body>

	<%- include('../../partials/header', { header: header }) %>
		<%- include('../../partials/breadcrumb', { breadcrumbs : [{ text : 'Trang cá nhân' , link
			: '/account/information' }, { text : 'Sửa thông tin cá nhân' , link : '/account/edit-information' }] }) %>

			<main class="account-container">
				<%- include("../../components/sidebar_account") %>

					<section class="purchase__main" id="info">
						<div class="purchase__main__item">
							<div class="purchase-item">
								<div class="purchase-item--top">
									<div class="purchase-item__info">
										<h3>Thông tin cá nhân</h3>

									</div>
								</div>
						
								<form id="editForm" action="/account/edit-information" method="POST">
									<div class="purchase-item__main">
										<div class="purchase-item__element">
											<div class="purchase-item__product-detail">
												<h5 id="purchase-item__product-name">Tên người dùng: </h5>
												<input type="text" id="userName" name="user_name" value="Vi Thị Hương" oninput="checkUserName()" />
												<span id="userNameError" class="error-message"></span>
												<hr />
			
												<h5 id="purchase-item__product-name">Ngày sinh: </h5>
												<input type="date" id="userBirth" name="user_birth" value="2023-10-24" />
												<span id="userBirthError" class="error-message"></span>
												<hr />
			
												<h5 id="purchase-item__product-name">Giới tính: </h5>
												<select id="userSex" name="user_sex">
													<option value="Nam">Nam</option>
													<option value="Nữ">Nữ</option>
												</select>
												<hr />
			
												<h5 id="purchase-item__product-name">Email: </h5>
												<input type="email" id="userEmail" name="user_email" value="vithihuong384@gmail.com" oninput="checkUserEmail()" />
												<span id="userEmailError" class="error-message"></span>
												<hr />
			
												<h5 id="purchase-item__product-name">Số điện thoại: </h5>
												<input type="tel" id="userPhone" name="user_phone" pattern="[0-9]{10}" value="0352060384" oninput="checkUserPhone()" />
												<span id="userPhoneError" class="error-message"></span>
												<hr />
			
												<h5 id="purchase-item__product-name">Địa chỉ: </h5>
												<input type="text" id="userAddress" name="user_address" value="An Bình, Dĩ An, Bình Dương" />
												<hr />
			
												<div class="popup__button">
													<a href="/account/information"><button class="btn btn--outlined pri btn-cancel" type="button">Hủy</button></a>
													<button class="btn btn--filled pri" type="button" onclick="saveData()">Lưu</button>
												</div>
											</div>
										</div>
									</div>
								</form>
								</div>

							</div>
						</div>
					</section>

			</main>
			<%- include('../../partials/app-bar') %>
				<%- include('../../partials/footer') %>

					<script src="/scripts/pages/account/information.js"></script>
					<script src="/scripts/pages/account/edit-information.js"></script>

</body>

</html>