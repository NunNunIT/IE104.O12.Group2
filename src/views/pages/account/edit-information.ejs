<!DOCTYPE html>
<html lang="vi-VN">

<head>


	<link rel="shortcut icon" type="ico" href="/imgs/ico-logo-blue.png" />


	<link rel="stylesheet" href="/styles/pages/account/edit-information.css">

	<title>TECHTWO.</title>
</head>

<body>

	<%- include('../../partials/header', { header: header }) %>
	<%- include('../../partials/breadcrumb', { breadcrumbs : [{ text : 'Trang cá nhân' , link : '/account/information' }, { text : 'Sửa thông tin cá nhân' , link : '/account/edit-information' }] }) %>

	<main class="account-container">
		<%- include("../../components/sidebar_account") %>

		<section class="purchase__main" id="info">
			<div class="purchase__main__item">
				<div class="purchase-item">
					<div class="purchase-item--top">
						<div class="purchase-item__info">
							<h3>Thông tin cá nhân</h3>

						</div>
					</div>

					<form id="editForm" action="/account/edit-information" method="POST">
						<div class="purchase-item__main">
							<div class="purchase-item__element">
								<div class="purchase-item__product-detail">
									<div class="purchase-item__product-name">
										<label>
											<h5>Tên người dùng:</h5>
										</label>
										<div class="userName">
											<input type="text" id="userName" name="userName" autocomplete="off" placeholder="Nhập tên" value= "<%= user.user.user_name %>" />
										</div>
										<div class="error-message"></div>
										<!-- <hr /> -->
									</div>

									<div class="purchase-item__product-name">
										<label>
											<h5>Ngày sinh:</h5>
										</label>
										<div class="userBirth">
											<input type="date" id="userBirth" name="userBirth" autocomplete="off" placeholder="Nhập ngày sinh" value="<%= user.user.user_birth %>" />
										</div>
										<div class="error-message"></div>
										<!-- <hr /> -->
									</div>

									<div class="purchase-item__product-name">
										<label>
											<h5>Giới tính:</h5>
										</label>
										<div class="userSex">
											<select id="userSex" name="userSex" title="Chọn giới tính">
												<option value="Nữ">Nữ</option>
												<option value="Nam">Nam</option>
											</select>
										</div>
										<!-- <hr /> -->
									</div>

									<div class="purchase-item__product-name">
										<label>
											<h5>Email:</h5>
										</label>
										<div class="userEmail">
											<input type="text" id="userEmail" name="userEmail" autocomplete="off" placeholder="Nhập email" value="<%= user.user.user_email %>" />
										</div>
										<div class="error-message"></div>
										<!-- <hr /> -->
									</div>

									<div class="purchase-item__product-name">
										<label>
											<h5>Số điện thoại:</h5>
										</label>
										<div class="userPhone">
											<input type="text" id="userPhone" name="userPhone" pattern="[0-9]{10}" autocomplete="off" placeholder="Nhập số điện thoại" value="<%= user.user.user_phone %>" />
										</div>
										<div class="error-message"></div>
										<!-- <hr /> -->
									</div>

									<div class="purchase-item__product-name">
										<label>
											<h5>Địa chỉ:</h5>
										</label>
										<div class="userAddress">
											<input type="text" id="userAddress" name="userAddress" autocomplete="off" placeholder="An Bình, Dĩ An, Bình Dương" value="<%= user.user.user_address %>" />
										</div>
										<div class="error-message"></div>
										<!-- <hr /> -->
									</div>

									<div class="popup__button">
										<a href="/account/information"><button class="btn btn--outlined pri btn-cancel" type="button">Hủy</button></a>
										<button type="submit" class="btn btn--filled pri" type="button">Lưu</button>
									</div>
								</div>
							</div>
						</div>
					</form>
				</div>

			</div>
			</div>
		</section>

	</main>
	<%- include('../../partials/app-bar') %>
	<%- include('../../partials/footer') %>

	<script src="/scripts/pages/account/information.js"></script>
	<script src="/scripts/pages/account/edit-information.js"></script>

</body>

</html>